{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@novatics/checkbox": ["packages/checkbox/src/index.ts"],
      "@novatics/checkbox-field": ["packages/checkbox-field/src/index.ts"],
      "@novatics/chip": ["packages/chip/src/index.ts"],
      "@novatics/core": ["packages/core/src/index.ts"],
      "@novatics/currency-text-field": [
        "packages/currency-text-field/src/index.ts"
      ],
      "@novatics/divider": ["packages/divider/src/index.ts"],
      "@novatics/masked-text-field": [
        "packages/masked-text-field/src/index.ts"
      ],
      "@novatics/radio": ["packages/radio/src/index.ts"],
      "@novatics/styles": ["packages/styles/src/index.ts"],
      "@novatics/tokens": ["packages/tokens/src/index.ts"],
      "@novatics/wizard": ["packages/wizard/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
