{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "cypress"
    ]
  },
  "include": [
    "vite.config.ts",
    "../../cypress",
    "src/**/*.cy.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.cy.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.cy.js",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.cy.jsx",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ]
}
