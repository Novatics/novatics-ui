{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "component",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Component name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What's the name of your new component?"
    },
    "mui": {
      "type": "boolean",
      "description": "Use material-ui as a base lib for the component",
      "default": false
    }
  },
  "required": ["name"]
}
