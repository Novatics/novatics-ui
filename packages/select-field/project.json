{
  "name": "select-field",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/select-field/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/select-field/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "build": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/select-field",
        "tsConfig": "packages/select-field/tsconfig.lib.json",
        "project": "packages/select-field/package.json",
        "entryFile": "packages/select-field/src/index.ts",
        "external": [
          "@emotion/react/jsx-runtime"
        ],
        "rollupConfig": "@nrwl/react/plugins/bundle-rollup",
        "compiler": "babel",
        "assets": [
          {
            "glob": "packages/select-field/README.md",
            "input": ".",
            "output": "."
          }
        ],
        "format": [
          "cjs"
        ],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/select-field/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": [
        "{options.outputDir}"
      ],
      "options": {
        "outputDir": "dist/storybook/select-field",
        "configDir": "packages/select-field/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "executor": "@nrwl/web:file-server",
      "options": {
        "buildTarget": "select-field:build-storybook",
        "staticFilePath": "dist/storybook/select-field"
      },
      "configurations": {
        "ci": {
          "buildTarget": "select-field:build-storybook:ci"
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "master",
        "preset": "conventional"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "version:deploy": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "postTargets": [
          "select-field:deploy"
        ]
      }
    }
  }
}
