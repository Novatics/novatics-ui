{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@novatics/action-footer": [
        "packages/action-footer/src/index.ts"
      ],
      "@novatics/button": [
        "packages/button/src/index.ts"
      ],
      "@novatics/checkbox": [
        "packages/checkbox/src/index.ts"
      ],
      "@novatics/checkbox-field": [
        "packages/checkbox-field/src/index.ts"
      ],
      "@novatics/chip": [
        "packages/chip/src/index.ts"
      ],
      "@novatics/core": [
        "packages/core/src/index.ts"
      ],
      "@novatics/currency-text-field": [
        "packages/currency-text-field/src/index.ts"
      ],
      "@novatics/divider": [
        "packages/divider/src/index.ts"
      ],
      "@novatics/file-upload": [
        "packages/file-upload/src/index.ts"
      ],
      "@novatics/form": [
        "packages/form/src/index.ts"
      ],
      "@novatics/form-group": [
        "packages/form-group/src/index.ts"
      ],
      "@novatics/input-field": [
        "packages/input-field/src/index.ts"
      ],
      "@novatics/linear-progress": [
        "packages/linear-progress/src/index.ts"
      ],
      "@novatics/link": [
        "packages/link/src/index.ts"
      ],
      "@novatics/masked-text-field": [
        "packages/masked-text-field/src/index.ts"
      ],
      "@novatics/radio": [
        "packages/radio/src/index.ts"
      ],
      "@novatics/radio-group-field": [
        "packages/radio-group-field/src/index.ts"
      ],
      "@novatics/select-field": [
        "packages/select-field/src/index.ts"
      ],
      "@novatics/styles": [
        "packages/styles/src/index.ts"
      ],
      "@novatics/tokens": [
        "packages/tokens/src/index.ts"
      ],
      "@novatics/wizard": [
        "packages/wizard/src/index.ts"
      ],
      "@novatics/workspace-plugin": [
        "tools/workspace-plugin/src/index.ts"
      ],
      "core/alert": [
        "packages/alert/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
