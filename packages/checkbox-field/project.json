{
  "name": "checkbox-field",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/checkbox-field/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/checkbox-field/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "dist/packages/checkbox-field",
        "tsConfig": "packages/checkbox-field/tsconfig.lib.json",
        "project": "packages/checkbox-field/package.json",
        "entryFile": "packages/checkbox-field/src/index.ts",
        "external": ["@emotion/react/jsx-runtime"],
        "rollupConfig": "@nrwl/react/plugins/bundle-rollup",
        "compiler": "swc",
        "assets": [
          {
            "glob": "packages/checkbox-field/README.md",
            "input": ".",
            "output": "."
          }
        ],
        "format": ["cjs"],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/checkbox-field/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/checkbox-field",
        "configDir": "packages/checkbox-field/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "executor": "@nrwl/web:file-server",
      "options": {
        "buildTarget": "checkbox-field:build-storybook",
        "staticFilePath": "dist/storybook/checkbox-field"
      },
      "configurations": {
        "ci": {
          "buildTarget": "checkbox-field:build-storybook:ci"
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "master",
        "preset": "conventional"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "version:deploy": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "postTargets": ["checkbox-field:deploy"]
      }
    }
  }
}
